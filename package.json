{
  "name": "@borbalher/component-composer",
  "version": "1.0.18",
  "description": "Component composer for Handlebars.js",
  "main": "index.js",
  "scripts": {
    "generate-doc": "npm run test && npm run-script generate-doc-coverage && npm run-script generate-doc-tests && npm run-script generate-doc-jsdoc",
    "generate-doc-coverage": "nyc report --reporter=html --report-dir=./doc/coverage",
    "generate-doc-tests": "mocha src/**/*.test.js test/**/*.test.js --reporter mochawesome --reporter-options reportDir=doc/tests,reportFilename=index,showHooks=always",
    "generate-doc-jsdoc": "jsdoc src -c jsdoc.json",
    "test": "nyc mocha test/**/*.test.js",
    "tester": "eslint src/**/**.js && nyc mocha src/**/*.test.js test/**/*.test.js",
    "linter": "eslint src/**/**.js",
    "linter-and-fix": "eslint src/**/**.js --fix",

    "webpack-browser": "npm run webpack-browser-dev && npm run webpack-browser-prod",
    "webpack-browser-dev": "webpack --progress --profile --config webpack/browser/config.dev.js",
    "webpack-browser-prod": "webpack --progress --profile --config webpack/browser/config.prod.js",

    "remove-dist": "rm -rf dist",
    "create-browser-dist": "npm run remove-dist && npm run browser-dist",
    "browser-dist": "mkdir -p dist/browser/core/ && cp -r src/core/config.js dist/browser/core && cp -r src/core/index.js dist/browser/core && cp -r src/core/common dist/browser/core/common && cp -r src/core/browser dist/browser/core/browser",
    "pack-that-shit" : "npm run create-browser-dist && npm run webpack-browser && npm run remove-dist"
  },
  "keywords": [
    "handlebars",
    "components",
    "web"
  ],
  "author": "@borbalher",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/borbalher/component-composer/"
  },
  "dependencies": {
    "add-module-exports-webpack-plugin": "0.1.0",
    "dateformat": "3.0.3",
    "handlebars": "4.3.1",
    "requirejs": "2.3.6",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.6",
    "@babel/plugin-transform-modules-commonjs": "7.2.0",
    "@babel/polyfill": "7.6.0",
    "@babel/preset-env": "7.1.6",
    "babel-loader": "8.0.6",
    "babel-minify-webpack-plugin": "0.3.1",
    "babel-preset-minify": "^0.5.1",
    "chai": "4.2.0",
    "eslint": "5.9.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "jsdoc": "3.6.3",
    "jsdom": "13.0.0",
    "jsdom-global": "3.0.2",
    "mocha": "5.2.0",
    "mochawesome": "3.1.1",
    "nyc": "14.1.1",
    "tui-jsdoc-template": "1.2.2",
    "webpack": "4.29.6",
    "webpack-bundle-analyzer": "3.5.1",
    "webpack-cli": "3.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
